{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "KaraokeNatin",
  "version": "0.1.0",
  "identifier": "com.karaokenatin.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "KaraokeNatin",
        "width": 1280,
        "height": 720,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/yt-dlp",
      "binaries/signaling-server"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "shortDescription": "Karaoke party app with remote control",
    "longDescription": "KaraokeNatin is a karaoke party app that lets guests add songs from their phones. Features include YouTube integration, real-time queue management, and a mobile-friendly remote control interface.",
    "copyright": "Copyright Â© 2026 KaraokeNatin. MIT License.",
    "category": "Entertainment",
    "publisher": "KaraokeNatin"
  }
}